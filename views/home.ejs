<link rel="stylesheet" href="/css/home.css">

<div id="home-container">
  
    <section id="feed-posts">
        
        <% if(locals.user){ %>
            <h4>Wanna Post something . Don't think!! Just Post...</h4>
        
        <form action="/posts/create" id="new-post-form" method="POST">
            <textarea name="content" cols="130" rows="5" placeholder="Type Here..." required></textarea>
            <input id="post-btn" type="submit" value="Post">
        </form>
        <% } %>

        <h1></h1>
        
            <div id="posts-list-container">
                <ul>
                    <% for(post of posts){ %>
                        
                    <%- include('_post') -%>
                    
                    <%- include('_comment') -%>
                        
                    <%} %>
                </ul>
            </div>
        </section>
        
        
        <section id="users">
            <h4>Users List</h4>
            <% if (locals.user) { %>
            <% for(u of all_users){%>
                <li>
                        <div>
                        <img src="<%= u.avatar %>" alt="<%= user.name %>" width="100">
                        <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
                        <div>

                </li>
            <% } %>

            <%}%>

            


        </section>
</div>

